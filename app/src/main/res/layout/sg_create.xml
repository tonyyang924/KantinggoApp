<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <TableRow
        android1:id="@+id/tableRow1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <TextView
            android1:id="@+id/create_room_name"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="使用者名稱："
            android1:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/create_room_name_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android1:id="@+id/tableRow2"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <TextView
            android1:id="@+id/create_room_pwd"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="頻道代號："
            android1:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android1:id="@+id/create_room_pwd_ed"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:ems="10" />
    </TableRow>

    <Button
        android1:id="@+id/create_room_submit"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text="加入群組聊天室" />

    <Button
        android1:id="@+id/exit_room_submit"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text="離開群組聊天室" />

    <WebView
        android1:id="@+id/SocketWebView"
        android1:layout_width="match_parent"
        android1:layout_height="175dp" />

    <ListView
        android1:id="@+id/Content_Listview"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:stackFromBottom="true"
        android1:transcriptMode="alwaysScroll"
        android:background="#00000000" >
    </ListView>

</LinearLayout>